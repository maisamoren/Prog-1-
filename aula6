// verifica o assento do onibus
int verificarAssento(char onibus[lin][col], int assento){

	printf ("Digite o numero do assento: \n");
	scanf ("%d", &assento);

	return 0;
}


// reserva o assento do onibus
int reservarAssento(char onibus[][], int assento){
	return 0;
}


void imprimirMapa (char onibus[lin][col], int lin, int col){
	int i, j;
	
	for (i = 0; i < lin; i++){
		for (j = 0; j < col; j++){
			printf ("%d\t", onibus[lin][col]);
		}
		printf ("\n");
	}
}


