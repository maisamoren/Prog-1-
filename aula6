#include <stdio.h>

#define fil 12
#define pol 4


// verifica o assento do onibus
int verificarAssento(char onibus[fil][pol], int assento){
	int f, p;

	printf ("Digite o numero do assento: \n");
	scanf ("%d", &assento);

	f = assento / 4;
	p = assento % 4;

	if (onibus[f][p] = 'o'){
		return assento;
	}
	else {
		return 0;
	}
}


// reserva o assento do onibus
int reservarAssento(char onibus[fil][pol], int assento){

}


void imprimirMapa (char onibus[fil][pol]){
	int i, j;
	
	for (i = 0; i < fil; i++){
		for (j = 0; j < pol; j++){
			printf ("%c\t", onibus[i][j]);
		}
		printf ("\n");
	}
}


// PROGRAMA PRINCIPAL *****************************************
int main () {

	int assento, opcao, aux;
	char onibus [fil][pol];
	char x = 'o';


// preencher os assentos
 	for (int i = 0; i < fil; i++){
		for (int j = 0; j < pol; j++){
			onibus[i][j] = x;
		}
	}

	printf ("Digite 1 para verificar se um dado assento estÃ¡ ocupado ou livre \n");
	printf ("Digite 3 para imprimir o mapa de assentos \n");
	scanf ("%d", &opcao);

	assento = 0;


	if (opcao == 1){
		aux = verificarAssento (onibus, assento);
		if (aux > 0){
			reservarAssento (onibus, aux);
		}
	}
	
	if (opcao == 3){
		imprimirMapa (onibus);
	}

	return 0;
}
