#include <stdio.h>

#define fil 12
#define pol 4


// verifica o assento do onibus
int verificarAssento(char onibus[fil][pol], int assento){

	printf ("Digite o numero do assento: \n");
	scanf ("%d", &assento);

	return assento;
}


// reserva o assento do onibus
int reservarAssento(char onibus[fil][pol], int assento){
	return 0;
}


void imprimirMapa (char onibus[fil][pol]){
	int i, j;
	
	for (i = 0; i < fil; i++){
		for (j = 0; j < pol; j++){
			printf ("%c\t", onibus[i][j]);
		}
		printf ("\n");
	}
}

//void inicia 


// PROGRAMA PRINCIPAL *****************************************
int main () {

	int assento, opcao;
	char onibus [fil][pol];
	char x = 'o';


// preencher os assentos
 	for (int i = 0; i < fil; i++){
		for (int j = 0; j < pol; j++){
			onibus[i][j] = x;
		}
	}

	printf ("Digite 1 para verificar se um dado assento estÃ¡ ocupado ou livre \n");
	printf ("Digite 2 para reservar um assento livre \n");
	printf ("Digite 3 para imprimir o mapa de assentos \n");
	scanf ("%d", &opcao);

	assento = 0;


	if (opcao == 1){
		verificarAssento (onibus, assento);
	}
	if (opcao == 2){
//		reservarAssento ();
	}
	if (opcao == 3){
		imprimirMapa (onibus);
	}

	return 0;
}
